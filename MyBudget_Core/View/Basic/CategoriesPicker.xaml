<UserControl x:Class="MyBudget_Core.View.Basic.CategoriesPicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MyBudget_Core.View.Basic"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel VerticalAlignment="Center">
        <TextBlock Text="Kategorie wydatków" Margin="5"/>
        <ComboBox x:Name="cbxCategory" DisplayMemberPath="name" Margin="5"/>
        <ComboBox x:Name="cbxSubCategory" DisplayMemberPath="name" Margin="5"/>
    </StackPanel>
</UserControl>
