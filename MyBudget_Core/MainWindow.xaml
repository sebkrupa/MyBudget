<Window xmlns:View="clr-namespace:MyBudget_Core.View"  x:Class="MyBudget_Core.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyBudget_Core"
        mc:Ignorable="d"
        Title="Budżet" Height="450" Width="800">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Menu Grid.Row="0" Height="20" VerticalAlignment="Top">
            <MenuItem Header="Odśwież dane" Click="MenuItem_Click"/>

        </Menu>
        <TabControl Margin="0,20,0,0">
            <TabItem x:Name="tabMonthly" Header="Miesięczne"/>
            <TabItem x:Name="tabExpenses" Header="Wydatki"/>
            <TabItem x:Name="tabIncome" Header="Przychody"/>
        </TabControl>
        <View:AmountAdd Grid.Row="1"/>
    </Grid>
</Window>
